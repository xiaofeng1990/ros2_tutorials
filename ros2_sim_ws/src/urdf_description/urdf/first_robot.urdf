<<?xml version="1.0"?>
<robot name="first_robot">
    <!-- 定义机器人身体部分 -->
    <link name="base_link">
        <!-- 定义外观描述 -->
        <visual>
            <!-- 沿着自己的几何中心的偏移和旋转 -->
            <origin xyz="0 0 0" rpy="0 0 0" />
            <!-- 几何形状 -->
            <geometry>
                <!-- 圆柱体 半径 0.10，高度0.12 -->
                <cylinder length="0.12" radius="0.10" />
            </geometry>
            <!-- 定义材质和颜色 0.5半透明-->
            <material name="white">
                <color rgba="1.0 1.0 1.0 0.5" />
            </material>
        </visual> 
    </link>

    <!-- 机器人的IMU部件，惯性测量单元 -->
    <link name="imu_link">
        <!-- 定义外观描述 -->
        <visual>
            <!-- 沿着自己的几何中心的偏移和旋转 -->
            <origin xyz="0 0 0" rpy="0 0 0" />
            <!-- 几何形状 -->
            <geometry>
               <!-- box -->
                <box size="0.02 0.02 0.02" />
            </geometry>
            <!-- 定义材质和颜色 0.5半透明-->
            <material name="white">
                <color rgba="0.0 0.0 0.0 0.5" />
            </material>
        </visual> 
    </link>

    <!-- 定义关节 -->
    <joint name="imu_joint" type="fixed">
        <!-- 关节连接的父链接 -->
        <parent link="base_link" />
        <!-- 关节连接的子链接 -->
        <child link="imu_link" />
        <!-- 关节的位置和旋转 -->
        <origin xyz="0 0 0.03" rpy="0 0 0" />
    </joint>
</robot>
